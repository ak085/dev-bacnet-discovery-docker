# BacPipes - Edge Data Collection System
# Copy this file to .env and update values for your deployment

# ============================================================================
# BACnet Configuration
# ============================================================================
BACNET_IP=192.168.1.35        # Local IP address for BACnet communication
BACNET_PORT=47808              # BACnet/IP port (standard: 47808)
BACNET_DEVICE_ID=3001234       # BACnet device ID for discovery tool

# ============================================================================
# MQTT Broker (External - LXC Container)
# ============================================================================
MQTT_BROKER=10.0.60.2          # External MQTT broker IP (LXC #2)
MQTT_PORT=1883                 # Standard MQTT port
MQTT_CLIENT_ID=bacpipes_worker # Unique client identifier

# ============================================================================
# PostgreSQL Configuration Database
# ============================================================================
POSTGRES_USER=anatoli
POSTGRES_DB=bacpipes
DATABASE_URL=postgresql://anatoli@postgres:5432/bacpipes

# ============================================================================
# TimescaleDB Time-Series Database
# ============================================================================
TIMESCALEDB_DB=timescaledb
TIMESCALEDB_USER=anatoli

# ============================================================================
# Grafana Dashboard
# ============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ============================================================================
# Worker Configuration
# ============================================================================
POLL_INTERVAL=60               # Default polling interval (seconds)

# ============================================================================
# System Configuration
# ============================================================================
TZ=Asia/Kuala_Lumpur           # Timezone for all services
NODE_ENV=production            # Environment: development | production
